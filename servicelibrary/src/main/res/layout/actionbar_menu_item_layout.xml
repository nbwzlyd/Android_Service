<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:addStatesFromChildren="true"
    android:descendantFocusability="blocksDescendants"
    android:focusable="true"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingLeft="6dp"
    android:paddingRight="6dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_actionbar_menu_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:visibility="visible" />

        <TextView
            android:id="@+id/iv_actionbar_red_count"
            android:layout_width="15dip"
            android:layout_height="15dip"
            android:gravity="center"
            android:layout_alignRight="@id/iv_actionbar_menu_item"
            android:layout_alignTop="@id/iv_actionbar_menu_item"
            android:background="@drawable/bg_red_circle"
            android:textColor="@color/main_white"
            android:layout_marginRight="-3dip"
            android:textSize="@dimen/text_size_small"
            android:layout_marginTop="1dip"
            android:textStyle="bold"
            android:visibility="gone"/>

        <View
            android:id="@+id/iv_actionbar_red_dot"
            android:layout_width="7dip"
            android:layout_height="7dip"
            android:layout_marginTop="3dip"
            android:background="@drawable/icon_red_dot"
            android:layout_alignRight="@id/iv_actionbar_menu_item"
            android:layout_alignTop="@id/iv_actionbar_menu_item"
            android:visibility="gone"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent">

        <TextView
            android:id="@+id/tv_actionbar_menu_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@null"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@drawable/selector_tv_green"
            android:textSize="@dimen/text_size_info"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/img_menu_tv_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />
    </RelativeLayout>

</LinearLayout>