<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="90dp">

    <ImageView
        android:id="@+id/pt_image"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        android:src="@drawable/bg_default_common"/>

    <ImageView
        android:id="@+id/pt_image_cover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/pt_image"
        android:layout_alignLeft="@id/pt_image"
        android:layout_alignRight="@id/pt_image"
        android:layout_alignTop="@id/pt_image"
        android:scaleType="fitXY"
        android:src="@drawable/scenery_bg_listpic"/>

    <TextView
        android:id="@+id/pt_image_tag_bottom"
        style="@style/tv_small_white_style_common"
        android:layout_alignBottom="@id/pt_image"
        android:layout_alignLeft="@id/pt_image"
        android:layout_alignRight="@id/pt_image"
        android:background="@drawable/bg_listpicture_common_disable"
        android:gravity="center_horizontal|bottom"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:paddingBottom="5dp"/>

    <TextView
        android:id="@+id/pt_image_tag"
        style="@style/tv_small_white_style_common"
        android:layout_alignLeft="@id/pt_image"
        android:layout_alignTop="@id/pt_image"
        android:gravity="center"
        android:maxLines="1"/>

    <TextView
        android:id="@+id/pt_title"
        style="@style/tv_list_primary_style_common"
        android:layout_alignTop="@+id/pt_image"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="16dp"
        android:layout_toRightOf="@+id/pt_image"
        android:ellipsize="end"
        android:includeFontPadding="false"
        android:maxLines="1"
        tools:text="苏州乐园"/>

    <LinearLayout
        android:id="@+id/pt_tips_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/pt_title"
        android:layout_below="@id/pt_title"
        android:layout_marginTop="4dp"
        android:minHeight="14dp"
        android:gravity="center_vertical|left"/>

    <RelativeLayout
        android:id="@+id/pt_tag_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/pt_title"
        android:layout_alignLeft="@id/pt_title"
        android:layout_alignTop="@+id/pt_title"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical|left"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/pt_comment_container"
        style="@style/tv_cell_hint_hint_style"
        android:layout_alignLeft="@id/pt_tips_container"
        android:layout_below="@id/pt_tips_container"
        android:layout_marginRight="16dp"
        android:layout_marginTop="6dp"
        android:ellipsize="end"
        android:gravity="center_vertical|left"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:minHeight="16dp"
        tools:text="7404条点评 97%满意"/>

    <TextView
        android:id="@+id/pt_distance"
        style="@style/tv_cell_hint_hint_style"
        android:layout_alignBaseline="@+id/pt_property_container"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="4dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:ellipsize="end"
        android:maxLines="1"
        tools:text="16km"/>

    <TextView
        android:id="@+id/pt_property_container"
        style="@style/tv_cell_hint_hint_style"
        android:layout_alignLeft="@id/pt_comment_container"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="2dp"
        android:layout_toLeftOf="@id/pt_distance"
        android:ellipsize="end"
        android:gravity="bottom|left"
        android:includeFontPadding="false"
        android:maxLines="1"
        tools:text="新区 AAAAA"/>

    <TextView
        android:id="@+id/pt_price"
        style="@style/tv_title_orange_style"
        android:layout_above="@+id/pt_distance"
        android:layout_alignBaseline="@id/pt_comment_container"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:minHeight="24dp"
        tools:text="¥180dd"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="110dp"
        android:background="@color/main_line"/>

</RelativeLayout>