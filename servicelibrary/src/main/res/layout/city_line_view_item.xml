<?xml version="1.0" encoding="UTF-8"?>
<com.tongcheng.android.common.city.basecity.view.LineView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_content"
    android:layout_width="fill_parent"
    android:layout_height="48dp"
    android:background="@drawable/selector_cell_single_line"
    android:descendantFocusability="blocksDescendants">

    <TextView
        android:id="@+id/tv_content"
        style="@style/tv_list_primary_style"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:singleLine="true"
        android:layout_marginRight="58dip"
        android:layout_marginLeft="@dimen/common_margin"
        android:gravity="left|center_vertical"
        android:text="line" />

    <ImageView
        android:id="@+id/iv_selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="42dip"
        android:background="@drawable/icon_select_common"
        android:visibility="gone" />

</com.tongcheng.android.common.city.basecity.view.LineView>