<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_header"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/common_list_filter_background_original"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_filter_cancel"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:gravity="center_vertical|left"
        android:paddingLeft="@dimen/common_margin"
        android:text="取消"
        style="@style/tv_list_white_style" />

    <TextView
        android:id="@+id/tv_filter_clear"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/common_filter_clear_bg_selector"
        android:gravity="center_vertical"
        android:paddingRight="12dp"
        android:paddingLeft="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="清空筛选"
        android:textColor="@color/common_filter_clear_fg"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_filter_commit"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:gravity="center_vertical|right"
        android:paddingRight="@dimen/common_margin"
        android:text="确定"
        style="@style/tv_list_white_style" />
</LinearLayout>