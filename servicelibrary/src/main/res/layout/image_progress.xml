<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     >
     <ImageView 
         android:id="@+id/placeholder_ImageView"
          android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_default_common"
        android:visibility="gone"
         />
    <com.tongcheng.lib.serv.module.image.show.photoviewer.PhotoView 
        android:id="@+id/scenery_image_large"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <ProgressBar 
        android:id="@+id/pb_img_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        style="@style/ProgressBar.Loading"
        android:visibility="gone"
        />
</RelativeLayout>