<?xml version="1.0" encoding="utf-8"?>
<com.tongcheng.lib.serv.ui.view.UploadImageProgressView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_messagebox_setting_notice"
    android:paddingTop="10dip">

    <TextView
        android:id="@+id/tv_progress"
        style="@style/tv_hint_hint_style"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="图片正在上传。。。"
        android:textColor="@color/main_tips_warning" />

    <View
        android:id="@+id/v_line"
        style="@style/tv_line_style"
        android:layout_width="fill_parent"
        android:layout_below="@+id/tv_progress"
        android:layout_marginTop="10dp" />
</com.tongcheng.lib.serv.ui.view.UploadImageProgressView>