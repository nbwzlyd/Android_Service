<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <View
        android:id="@+id/number_picker_minus"
        android:layout_width="30dip"
        android:layout_height="30dip"
        android:background="@drawable/selector_btn_super_numberbtn_minus" />

    <EditText
        android:id="@+id/number_picker_input"
        android:layout_width="wrap_content"
        android:layout_height="30dip"
        android:background="@drawable/bg_number_picker_input"
        android:gravity="center"
        android:paddingLeft="5dip"
        android:paddingRight="5dip"
        android:minWidth="40dip"
        android:singleLine="true"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:textColor="@color/selector_number_picker_input"
        android:textSize="@dimen/text_size_list" />

    <View
        android:id="@+id/number_picker_add"
        android:layout_width="30dip"
        android:layout_height="30dip"
        android:background="@drawable/selector_btn_super_numberbtn_add" />

</LinearLayout>