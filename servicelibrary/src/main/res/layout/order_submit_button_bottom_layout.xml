<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="@dimen/order_submit_bottom_height">
    <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="@color/main_line"
            ></View>

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

        <TextView
                android:id="@+id/tv_left"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/selector_order_submit_white"
                android:layout_weight="27"
                android:gravity="center"
                android:singleLine="true"
                style="@style/tv_title_secondary_style"
                android:visibility="visible"
                android:text="咨询客服"/>

        <TextView
                android:id="@+id/tv_right"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/selector_order_submit_orange"
                android:layout_weight="37"
                android:gravity="center"
                android:singleLine="true"
                android:visibility="visible"
                style="@style/tv_title_white_style"
                android:text="立即预订"/>

    </LinearLayout>

</LinearLayout>