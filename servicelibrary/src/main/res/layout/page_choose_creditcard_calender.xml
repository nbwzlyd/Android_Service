<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:background="@drawable/bg_list_window_rest">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_riqi"
        android:gravity="center_vertical"
        android:minHeight="40dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imgbtn_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:paddingBottom="7dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="7dp"
            android:src="@drawable/arrow_list_green_common_left"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/current_month_textview"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="2012年"
                style="@style/tv_list_primary_style"/>
        </LinearLayout>

        <ImageButton
            android:id="@+id/imgbtn_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:background="@null"
            android:paddingBottom="7dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="7dp"
            android:src="@drawable/arrow_list_green_common_right"/>

        <TextView
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/main_line"/>

        <TextView
            android:id="@+id/btn_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:text="确定"
            style="@style/tv_list_green_style"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/main_line"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_white"
        android:paddingTop="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <TextView
            android:id="@+id/tv_month1"
            style="@style/month_text_style"
            android:layout_weight="1"
            android:clickable="true"
            android:tag="1"
            android:text="一月"/>

        <TextView
            android:id="@+id/tv_month2"
            style="@style/month_text_style"
            android:layout_weight="1"
            android:clickable="true"
            android:tag="2"
            android:text="二月"/>

        <TextView
            android:id="@+id/tv_month3"
            style="@style/month_text_style"
            android:layout_weight="1"
            android:clickable="true"
            android:tag="3"
            android:text="三月"/>

        <TextView
            android:id="@+id/tv_month4"
            style="@style/month_text_style"
            android:layout_weight="1"
            android:clickable="true"
            android:tag="4"
            android:text="四月"/>

        <TextView
            android:id="@+id/tv_month5"
            style="@style/month_text_style"
            android:layout_weight="1"
            android:clickable="true"
            android:tag="5"
            android:text="五月"/>

        <TextView
            android:id="@+id/tv_month6"
            style="@style/month_text_style"
            android:layout_weight="1"
            android:clickable="true"
            android:tag="6"
            android:text="六月"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <TextView
            android:id="@+id/tv_month7"
            style="@style/month_text_style"
            android:layout_weight="1"
            android:clickable="true"
            android:tag="7"
            android:text="七月"/>

        <TextView
            android:id="@+id/tv_month8"
            style="@style/month_text_style"
            android:layout_weight="1"
            android:clickable="true"
            android:tag="8"
            android:text="八月"/>

        <TextView
            android:id="@+id/tv_month9"
            style="@style/month_text_style"
            android:layout_weight="1"
            android:clickable="true"
            android:tag="9"
            android:text="九月"/>

        <TextView
            android:id="@+id/tv_month10"
            style="@style/month_text_style"
            android:layout_weight="1"
            android:clickable="true"
            android:tag="10"
            android:text="十月"/>

        <TextView
            android:id="@+id/tv_month11"
            style="@style/month_text_style"
            android:layout_weight="1"
            android:clickable="true"
            android:tag="11"
            android:text="十一月"/>

        <TextView
            android:id="@+id/tv_month12"
            style="@style/month_text_style"
            android:layout_weight="1"
            android:clickable="true"
            android:tag="12"
            android:text="十二月"/>
    </LinearLayout>

</LinearLayout>