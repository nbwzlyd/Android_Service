<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_messagebox_setting_notice"
    android:orientation="horizontal" >
    
    <TextView 
        android:id="@+id/tv_dianping_jiangjin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/common_margin"
        android:gravity="center_vertical"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
		android:layout_weight="1"
        style="@style/tv_hint_hint_style"
        android:textColor="@color/main_tips_warning"
        />

	<ImageView
			android:id="@+id/iv_toast"
			android:padding="10dp"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginRight="3dp"
			android:src="@drawable/icon_password_binding"
			android:layout_gravity="left|center_vertical"/>

</LinearLayout>
